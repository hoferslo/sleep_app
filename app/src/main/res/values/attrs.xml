<resources>
    <attr name="colorSelected" format="color" />
    <attr name="colorUnselected" format="color" />
    <attr name="colorDisabled" format="color" />
    <declare-styleable name="FullscreenAttrs">
        <attr name="fullscreenBackgroundColor" format="color" />
        <attr name="fullscreenTextColor" format="color" />
    </declare-styleable>
    <declare-styleable name="GradientBackground">
        <attr name="endColor" format="color" />
    </declare-styleable>

    <declare-styleable name="PopupTextImageView">
        <attr name="popupText" format="string" />
    </declare-styleable>

    <declare-styleable name="SelectableLinearLayout">
        <attr name="selectableSelected" format="integer" />
        <attr name="colorSelected" />
        <attr name="colorUnselected" />
        <attr name="colorDisabled" />
    </declare-styleable>
    <declare-styleable name="ToggleableLinearLayout">
        <attr name="toggleableSelected" format="boolean" />
        <attr name="colorSelected" />
        <attr name="colorUnselected" />
    </declare-styleable>
</resources>