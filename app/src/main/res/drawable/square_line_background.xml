<!-- res/drawable/rounded_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with border -->
    <item android:right="6dp" android:left="6dp" android:top="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/sleepyBlue"/> <!-- Background color -->
            <corners android:radius="0dp"/> <!-- Adjust the radius as needed -->
        </shape>
    </item>

    <!-- Border -->
    <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">

            <stroke android:width="6dp" android:color="@color/sleepyBlueDarker"/> <!-- Border color and width -->
            <corners android:radius="4dp"/> <!-- Adjust the radius to match the background radius -->
        </shape>
    </item>
</layer-list>
