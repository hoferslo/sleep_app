<!-- res/drawable/clickable_circle_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/sleepyBlueLighter"/> <!-- Background color when pressed -->
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="@color/sleepyBlueLighter"/> <!-- Background color when focused -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/sleepyBlueLightest"/> <!-- Default background color -->
        </shape>
    </item>
</selector>
