<!-- res/drawable/left_bottom_lines.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Left Line -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/sleepyBlueDarker"/>
        </shape>
    </item>

    <!-- Bottom Line -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/sleepyBlueDarker"/>
        </shape>
    </item>

    <!-- Background -->
    <item android:left="4dp" android:right="4dp" android:top="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/sleepyBlueDark"/>
        </shape>
    </item>

</layer-list>
